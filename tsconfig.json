{
  "compilerOptions": {
    "outDir": "./dist",
    "moduleResolution": "node",
    "target": "es2017",
    "module": "esnext",
    "esModuleInterop": true,
    "strict": true,
    "verbatimModuleSyntax": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "allowArbitraryExtensions": true,
    "typeRoots": ["./node_modules/@types"],
    "skipLibCheck": true
  },
  "include": ["./ts/**/*.ts"],
  "exclude": ["declarations.d.ts"]
}
